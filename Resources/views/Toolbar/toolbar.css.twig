
html {
    margin-top: 50px !important;
}

.user-toolbar {
    width: 100%;
    height: 40px;
    padding: 5px;
    background-color: red;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 9999;
}

.in-edit-mode .edit-mode {
    display: none;
}

.save, .save-and-exit, .exit {
    display: none;
}

.in-edit-mode .save, .in-edit-mode .save-and-exit, .in-edit-mode .exit {
    display: inline;
}
