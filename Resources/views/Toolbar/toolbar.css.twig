
{% set height = 40 %}

html {
margin-top: {{ height + 10 }}px !important;
}

.raptor-layout-toolbar-outer {
margin-top: {{ height + 10 }}px !important;
}

.hx-adm-panel-user-toolbar {
width: 100%;
height: {{ height + 10}}px;
background-color: #fff;
position: fixed;
top: 0;
left: 0;
z-index: 99999;
color: #333;
font-family: "Lucida Sans Unicode", "Lucida Grande", Verdana, Arial, Helvetica, sans-serif;
font-size: 14px;
background-position: left bottom;
background-size: 100% 1px;
background-image: url('{{ asset('bundles/hexmediaadministrator/images/toolbar-border.jpg') }}');
background-repeat: no-repeat;
}

.hx-adm-panel-user-toolbar .hx-adm-panel-user-toolbar-content
{
background-position: 80% 0;
background-image: url('{{ asset('bundles/hexmediaadministrator/images/toolbar-hex.png') }}');
background-repeat: no-repeat;
}

.hx-adm-panel-user-toolbar .hx-adm-panel-logo {
display: none;
}

.hx-adm-panel-user-toolbar .hx-adm-panel-left {
float: left;
}

.hx-adm-panel-user-toolbar .hx-adm-panel-right {
float: right;
margin-right: 20px;
}

.hx-adm-panel-user-toolbar .hx-adm-panel-left,
.hx-adm-panel-user-toolbar .hx-adm-panel-right {
padding: 5px;
}

.hx-adm-panel-user-toolbar .hx-adm-panel-btn {
height: 20px;
margin: 5px 5px;
padding: 5px 10px;
line-height: 18px;

color: #fff;
background: #53b749;

display: inline-block;

border-radius: 5px;

text-decoration: none;
}

.hx-adm-panel-user-toolbar .hx-adm-panel-btn.hx-adm-panel-btn-logout {
background-color: #DA3B5C;
}
.hx-adm-panel-user-toolbar .hx-adm-panel-btn.hx-adm-panel-edit-mode {
background-color: #364ea1;
}

.hx-adm-panel-user-toolbar .hx-adm-panel-btn:hover {
color: red;
}

.hx-adm-panel-user-toolbar.hx-adm-panel-in-edit-mode .hx-adm-panel-edit-mode {
display: none;
}

.hx-adm-panel-user-toolbar .hx-adm-panel-exit {
display: none;
}

.hx-adm-panel-user-toolbar.hx-adm-panel-in-edit-mode .hx-adm-panel-exit {
display: inline-block;
}

.hx-adm-panel-user-toolbar {
}


.in-edit-mode .edit-mode {
display: none;
}

.save, .save-and-exit, .exit {
display: none;
}

.in-edit-mode .save, .in-edit-mode .save-and-exit, .in-edit-mode .exit {
display: inline;
}


.hx-adm-panel-clear {
clear: both;
}