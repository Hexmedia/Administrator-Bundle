{% block date_widget %}
    {% spaceless %}
        {% if widget_addon_prepend is null or widget_addon_prepend is not defined %}
            {% set widget_addon_prepend = { 'text': '<i class="icon-calendar"></i>' } %}
        {% endif %}
        {{ block('form_widget_simple') }}
        <script type="text/javascript">
            jQuery(document).ready(function () {
                jQuery("#{{ id }}").datepicker();
                jQuery("#{{ id }}").datepicker().on(
                        "changeDate",
                        function (event) {
                            jQuery("#{{ id }}").datepicker('hide');
                        }
                )
            });
        </script>
    {% endspaceless %}
{% endblock date_widget %}

{% block color_widget %}
    {% spaceless %}
        {% if widget_addon_prepend is null or widget_addon_prepend is not defined %}
            {% set widget_addon_prepend = { 'text': '#' } %}
        {% endif %}
        {{ block('form_widget_simple') }}
        <script type="text/javascript">
            jQuery(document).ready(function () {
                jQuery("#{{ id }}").ColorPicker({
                    onSubmit: function (hsb, hex, rgb, el) {
                        $(el).val(hex);
                        $(el).ColorPickerHide();
                    },
                    onBeforeShow: function () {
                        $(this).ColorPickerSetColor(this.value);
                    }
                }).bind('keyup', function () {
                            $(this).ColorPickerSetColor(this.value);
                        });
            });
        </script>
    {% endspaceless %}
{% endblock color_widget %}